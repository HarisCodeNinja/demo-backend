{
    "compilerOptions": {
      "target": "ES2022",                  
      "module": "NodeNext",             
      "outDir": "dist",                 
      "rootDir": "src",                 
      "esModuleInterop": true,          
      "moduleResolution": "NodeNext",       
      "resolveJsonModule": true,        
      "sourceMap": true,                
      "incremental": true,
      "tsBuildInfoFile": ".tsbuildinfo",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,             
      "declaration": true,
      "declarationMap": true,           
      "baseUrl": ".",
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }